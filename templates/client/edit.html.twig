{% extends 'base.html.twig' %}

{% block content %}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}
    <div class="d-flex justify-content-center mb-3">
        <h3>Client {{ app.request.get('_route') == 'clients_edit' ? app.request.get('id') ~ ' edit' : 'create' }}</h3>
    </div>
    <div class="d-flex justify-content-center">
        <div class="w-50">
            {{ form_start(form) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.phoneNumber) }}
                {{ form_row(form.email) }}
                {{ form_row(form.education) }}
                {{ form_row(form.consentProcessingPersonalData) }}
                <div>
                    <button class="btn btn btn-light">Save</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
